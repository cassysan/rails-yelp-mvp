<%= simple_form_for [@restaurant, @review] do |f| %>

  <%= f.input :content, placeholder: 'Enter the Address', class: 'form-group' %>

  <%= f.input :rating, as: :radio_buttons,
    collection: [
      0, 1, 2, 3, 4, 5], class: 'form-group' %>

  <%= f.button :submit, class: 'btn btn-success' %>
<% end %>
