<%= simple_form_for @restaurant do |f| %>

  <%= f.input :name, placeholder: 'Enter Restaurant Name', class: 'form-group' %>

  <%= f.input :address, placeholder: 'Enter the Address', class: 'form-group' %>

  <%= f.input :category, as: :radio_buttons,
    collection: [
      "chinese", "italian", "japanese", "french", "belgian"], class: 'form-group' %>

  <%= f.button :submit, class: 'btn btn-success' %>
<% end %>
