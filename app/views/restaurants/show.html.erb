<div class="container">
  <div class="row">
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
      <div class="card-description">
        <h2><%= @restaurant.name %></h2>
        <p><%= @restaurant.address %></p>
      </div>
    </div>
      <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: 'btn btn-success' %>
  </div>
  <div class="row">
    <div class="reviews">
        <% @reviews.each do |review| %>
          <hr>
          <p><%= review.content %></p>
          <p>Rating:<%= review.rating %></p>
       <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <%= link_to "Back to listings", restaurants_path, class: "btn btn-success" %>
  </div>
</div>
